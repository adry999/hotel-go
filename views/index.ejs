<%- include("./partials/header.ejs"); %>

<h1>Search destinations</h1>

<form action="/accommodation" method="GET">
    <div class="form-group">
        <label for="destination">Destination</label>
        <input type="text" class="form-control" id="destination" name="search[destination]">
    </div>
    <div class="form-group">
        <label for="checkin">Check-in</label>
        <input type="text" class="form-control" id="checkin" name="search[checkin]">
    </div>
    <div class="form-group">
        <label for="checkout">Check-out</label>
        <input type="text" class="form-control" id="checkout" name="search[checkout]">
    </div>
    <div class="form-group">
        <label for="adults">Adults</label>
        <input type="text" class="form-control" id="adults" name="search[adults]">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<%- include("./partials/footer.ejs"); %>